<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>inicioSesion</servlet-name>
        <servlet-class>Controller.inicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>Controller.registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrarProductos</servlet-name>
        <servlet-class>Controller.mostrarProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>form</servlet-name>
        <servlet-class>Controller.form</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registroProducto</servlet-name>
        <servlet-class>Controller.registroProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrar</servlet-name>
        <servlet-class>Controller.borrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>compra</servlet-name>
        <servlet-class>Controller.compra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inicioSesion</servlet-name>
        <url-pattern>/inicioSesion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrarProductos</servlet-name>
        <url-pattern>/mostrarProductos.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registroProducto</servlet-name>
        <url-pattern>/registroProducto.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrar</servlet-name>
        <url-pattern>/borrar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compra</servlet-name>
        <url-pattern>/compra.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
